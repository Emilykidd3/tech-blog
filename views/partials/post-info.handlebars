<article class="post">
    <div class="title">
        <a href="/dashboard/edit/{{id}}">{{title}}</a>
        <div>
            <span>{{format_url post_text}}</span>
        </div>
    </div>
    <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>